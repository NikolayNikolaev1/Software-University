<h1>My Profile</h1>
<div class="profile-box">
    <img src="{{currentUser.profilePicture}}">
    <div class="profile">
        <div class="info">
            <h3>My Teams</h3>
            {{#if teams}}
            {{#each teams}}
            <form action="/leave/{{_id}}" method="POST">
                <p>{{name}}</p>
                <input type="submit" value="Leave Team">
            </form>
            {{/each}}
            {{else}}
            <p>You have no teams</p>
            {{/if}}
            
        </div>
        <div class="more-info">
            <h3>My Projects</h3>
            {{#if projects}}
            {{#each projects}}
            <h3>{{name}}</h3>
            {{/each}}
            {{else}}
            <p>You have no projects!</p>
            {{/if}}
        </div>
    </div>
</div>